{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "ES2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"outDir": "../dist",
		"newLine": "LF",
		"pretty": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "ES2019"
	},
	"include": ["*.ts", "../typings/**/*"]
}
